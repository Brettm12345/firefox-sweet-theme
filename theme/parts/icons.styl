icon(x) {
	url('./theme/icons/' + x);
}

ico(x) {
	list-style-image: icon(x + '.svg') i;
}

/* Replace icons */
/* Built-in firefox icons color */
.toolbarbutton-icon {
	fill: var(--sweet-toolbar-color);
	fill-opacity: 1;
}

/* Popovers subview menu arrow */
.PanelUI-subView .subviewbutton-nav::after {
	background: icon('pan-start-symbolic.svg');
	background-size: contain;
	content: '' i;
	mt: -2px;
	s: 16px;
}

/* Popovers subview back button */
.subviewbutton-back {
	ico: 'pan-start-symbolic';
}

/* Sub menu arrow */
.menu-right {
	s: 16px;
	ico: 'pan-end-symbolic';
	ap: none;
}

menu[disabled] > .menu-right {
	o: 0.3;
}

@media (prefers-color-scheme: light) {
	menu:not([disabled]):hover > .menu-right, menu[open] > .menu-right {
		filter: invert(100%) brightness(200%);
	}
}

/* Arrow down buttons */
.expander-down > .button-box, #sidebar-switcher-arrow, #viewButton .button-menu-dropmarker {
	s: 16px;
	ico: 'pan-down-symbolic';
	ap: none;
}

.menulist-label-box:after {
	content: icon('pan-down-symbolic.svg') !important;
}

/* Arrow up buttons */
.expander-up > .button-box {
	s: 16px;
	ap: none;
	ico: 'pan-up-symbolic';
}

/* Search entries */
#urlbar[pageproxystate="invalid"] > #identity-box > #identity-icon, .searchbar-search-icon, #search-box .textbox-search-sign {
	ico: 'edit-find-symbolic';
	o: 0.7;
}

#search-box .textbox-search-sign {
	w: 16px;
	m: 2px 0;
}

/* Tree views */
treechildren::-moz-tree-twisty {
	ico: 'pan-down-symbolic';
}

treechildren::-moz-tree-twisty(open) {
	ico: 'pan-end-symbolic';
}

treechildren::-moz-tree-twisty(selected, focus) {
	ico: 'pan-down-symbolic-light';
}

treechildren::-moz-tree-twisty(selected, focus, open) {
	ico: 'pan-end-symbolic-light';
}

.sidebar-panel[lwt-sidebar-brighttext] .sidebar-placesTreechildren::-moz-tree-twisty {
	ico: 'pan-down-symbolic-light';
}

.sidebar-panel[lwt-sidebar-brighttext] .sidebar-placesTreechildren::-moz-tree-twisty(open) {
	ico: 'pan-end-symbolic-light';
}

/* Toolbars close button */
.close-icon:not(.tab-close-button) {
	ico: '_window-close-symbolic';
}

/* Window buttons */
:root[tabsintitlebar] #titlebar .titlebar-buttonbox .titlebar-close .toolbarbutton-icon {
	ico: '_window-close-symbolic';
}

:root[tabsintitlebar] #titlebar .titlebar-buttonbox .titlebar-max .toolbarbutton-icon, :root[tabsintitlebar] #titlebar #titlebar-max .toolbarbutton-icon {
	ico: '_window-maximize-symbolic';
}

:root[tabsintitlebar] #titlebar .titlebar-buttonbox .titlebar-min .toolbarbutton-icon, :root[tabsintitlebar] #titlebar #titlebar-min .toolbarbutton-icon {
	ico: '_window-minimize-symbolic';
}

:root[tabsintitlebar][inFullscreen] #window-controls #restore-button .toolbarbutton-icon {
	ico: 'view-restore-symbolic';
}

/* Private browsing button */
#privatebrowsing-button {
	ico: 'user-not-tracked';
}

/* Sidebar button */
#sidebar-button:-moz-locale-dir(ltr):not([positionend])  .toolbarbutton-icon, #sidebar-button:-moz-locale-dir(rtl)[positionend]  .toolbarbutton-icon {
	ico: 'toggle-sidebar-symbolic';
}

#sidebar-button .toolbarbutton-icon {
	ico: 'toggle-right-sidebar-symbolic';
}

/* Back button */
#nav-bar #back-button, #context-back {
	ico: 'go-previous-symbolic';
}

/* Forward button */
#nav-bar #forward-button, #context-forward {
	ico: 'go-next-symbolic';
}

/* Menu button */
#PanelUI-menu-button {
	ico: 'open-menu-symbolic';
}

/* New tab button */
#new-tab-button {
	ico: 'tab-new-symbolic';
}

/* Home button */
#home-button {
	ico: 'user-home-symbolic';
}

/* Preferences button */
#preferences-button {
	ico: 'preferences-system-symbolic';
}

/* Fullscreen button */
#fullscreen-button, #appMenu-fullscreen-button {
	ico: 'view-fullscreen-symbolic';
}

/* Zoom out button */
#zoom-out-button, #appMenu-zoomReduce-button {
	ico: 'zoom-out-symbolic';
}

/* Zoom in button */
#zoom-in-button, #appMenu-zoomEnlarge-button {
	ico: 'zoom-in-symbolic';
}

/* Developer button */
#developer-button {
	ico: 'applications-engineering-symbolic';
}

/* Email link button */
#email-link-button {
	ico: 'mail-unread-symbolic';
}

/* Print button */
#print-button {
	ico: 'printer-symbolic';
}

/* Addons button */
#add-ons-button {
	ico: 'application-x-addon-symbolic';
}

/* Find button */
#find-button {
	ico: 'edit-find-symbolic';
}

/* New window button */
#new-window-button {
	ico: 'window-new-symbolic';
}

/* History button */
#history-panelmenu {
	ico: 'preferences-system-time-symbolic';
}

/* All tabs button */
#alltabs-button {
	ico: 'pan-down-symbolic';
}

/* Cut button */
#cut-button, #appMenu-cut-button {
	ico: 'edit-cut-symbolic';
}

/* Copy button */
#copy-button, #appMenu-copy-button {
	ico: 'edit-copy-symbolic';
}

/* Paste button */
#paste-button, #appMenu-paste-button {
	ico: 'edit-paste-symbolic';
}

/* Overflow button */
#nav-bar-overflow-button {
	ico: 'view-more-horizontal-symbolic';
}

